<div class="chat-item">
  <img class="chat-item__avatar" src="{{url}}" alt="{{name}}"/>

  <div class="about">
    <span class="about__name">{{name}}</span>
    <span class="about__text">{{text}}</span>
  </div>

  <div class="info">
    <span class="info__time">{{time}}</span>
    <span class="info__notify">{{count}}</span>
  </div>
</div>
