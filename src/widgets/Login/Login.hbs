<div class="container">
  <h1 class="title">{{title}}</h1>
  <form class="form">
    {{#if login}}
      {{> Input label="Логин" name="login"}}
      {{> Input label="Пароль" name="password"}}

      <div class="form__action">
        {{> Button type="primary" label="Авторизоваться" class="button_auth"}}
        {{> Button type="outline" label="Нет аккаунта?"}}
      </div>

    {{else}}

      {{> Input label="Почта" name="email"}}
      {{> Input label="Логин" name="login"}}
      {{> Input label="Имя" name="first_name"}}
      {{> Input label="Фамилия" name="second_name"}}
      {{> Input label="Телефон" name="phone"}}
      {{> Input label="Пароль" name="password"}}
      {{> Input label="Пароль (ещё раз)" name="password"}}

      <div class="form__action">
        {{> Button type="primary" label="Зарегистрироваться" class="button_auth"}}
        {{> Button type="outline" label="Войти"}}
      </div>
    {{/if}}
  </form>
</div>
